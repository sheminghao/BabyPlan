<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_baby_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shetj.babydiary.ui.babyInfo.BabyInfoActivity"
    tools:showIn="@layout/activity_baby_info">
    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="120dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16dp"
            android:text="主页头像"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_baby"
                android:layout_width="160dp"
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_height="match_parent"
                android:src="@mipmap/ziliaotouxiang"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:layout_margin="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_baby"
                android:src="@mipmap/xiaojiantou"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selector_white_gray__0px"
        android:clickable="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="名称"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56dp"
                android:text="宝宝"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:src="@mipmap/xiaojiantou"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_marginTop="1.5dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selector_white_gray__0px"
        android:clickable="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="性别"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56dp"
                android:text="男"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:src="@mipmap/xiaojiantou"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_shengri"
        android:layout_marginTop="1.5dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selector_white_gray__0px"
        android:clickable="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="生日"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/tv_shengri"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56dp"
                android:text="2016-12—04"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:src="@mipmap/xiaojiantou"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
